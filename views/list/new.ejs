<h4>Create a new list</h4>
<form id="form" class="form-group" action="/list/new" method="post">
    <div id="sub-form">
        <input type="text" name="item" placeholder="item">
        <input type="number" name="qty" placeholder="1">
    </div>
    <p class="btn btn-primary mt-3" id="add">Add new item</p>
    <button class="btn btn-primary" type="submit">Create list</button>
</form>

<script>
    document.getElementById("add").addEventListener('click', addItem);
    function addItem(event) {
        let input = document.createElement("input");
        let qty = document.createElement("input");
        let div = document.createElement("div");
        input.name = "item";
        input.placeholder = "item";

        qty.type = "number";
        qty.name = "qty";
        qty.placeholder = "1";
       
        div.appendChild(input);
        div.appendChild(qty);

        document.getElementById("sub-form").appendChild(div);
    }
</script>